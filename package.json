{
  "name": "sid_farm_connector",
  "version": "1.0.0",
  "description": "",
  "main": "./build/index.js",
  "scripts": {
    "test": "env-cmd -f .env-cmdrc -e testing jest --watchAll --no-cache",
    "start": "env-cmd -f .env-cmdrc -e development ts-node-dev  --ignore-watch='node_modules/*' --ignore-watch='build/*' src/index.ts",
    "start:prod": "env-cmd -f .env-cmdrc -e production ts-node-dev  src/index.ts",
    "start:prod:pm2": "env-cmd -f .env-cmdrc -e production pm2 start pm2.config.js",
    "start:prod:2": "env-cmd -f .env-cmdrc -e production_2 ts-node-dev  src/index.ts",
    "start:prod:2:pm2": "env-cmd -f .env-cmdrc -e production_2 pm2 start pm2.config.js",
    "start:remote_test": "env-cmd -f .env-cmdrc -e remote_test ts-node-dev  src/index.ts",
    "start:remote_test_2": "env-cmd -f .env-cmdrc -e remote_test_2 ts-node-dev  src/index.ts",
    "build": "tsc"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./src/test/setup.ts"
    ],
    "testPathIgnorePatterns": [
      "./node_modules/",
      "./build/"
    ]
  },
  "dependencies": {
    "axios": "^1.6.7",
    "env-cmd": "^10.1.0",
    "events": "^3.3.0",
    "moment": "^2.30.1",
    "mssql": "^11.0.1",
    "node-cron": "^3.0.3",
    "tedious": "^18.6.1",
    "validator": "^13.9.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/mssql": "^9.1.5",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^2.0.12",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
